<?xml version="1.0" encoding="utf-8"?> <!--    DAY LA FRAME 4-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7788"
        tools:context=".MainPageActivity">

        <include layout="@layout/toolbar_blue"
            android:id="@+id/tool"
            />

        <Button
            android:id="@+id/breakfast"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Breakfast"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/add_food_breakfast"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="135dp"
            android:background="@color/white"
            android:text="ADD FOOD"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#0099FF"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/lunch"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="215dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Lunch"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/add_food_lunch"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="280dp"
            android:background="@color/white"
            android:text="ADD FOOD"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#0099FF"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/dinner"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="360dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Dinner"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/add_food_dinner"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="425dp"
            android:background="@color/white"
            android:text="ADD FOOD"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#0099FF"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/snacks"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="505dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Snacks"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/add_food_snacks"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="570dp"
            android:background="@color/white"
            android:text="ADD FOOD"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#0099FF"
            android:textSize="20dp"/>

    </RelativeLayout>
</ScrollView>
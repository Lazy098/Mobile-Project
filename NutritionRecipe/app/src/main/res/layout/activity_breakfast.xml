<?xml version="1.0" encoding="utf-8"?> <!--DAY LA FRAME 6-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".BreakfastActivity">

    <include layout="@layout/toolbar_total_breakfast"
        android:id="@+id/tool"
        />

    <SearchView
        android:id="@+id/search_breakfast"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/my_border_button2" />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_breakfast"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/white"
        android:translationZ="90dp">
    </ListView>

    <Button
        android:id="@+id/salad_nutrition"
        android:maxLines="2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Salad\n160 cal, Asian salad, 1.0 cup"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_add"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/my_border_button2"/> <!--để ý cái drawable nhá, nguồn icon nút add màu xanh dương t có thể đặt tên khác vs br ó :3 -->

    <Button
        android:id="@+id/_nutrition"
        android:maxLines="2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textAllCaps="false"
        android:drawableRight="@drawable/ic_add"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/my_border_button2"/>

    <Button
        android:id="@+id/gì_đó_nutrition"
        android:maxLines="2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_add"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/my_border_button2"/>

    <Button
        android:id="@+id/sth_nutrition"
        android:maxLines="2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_add"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/my_border_button2"/>

</RelativeLayout>